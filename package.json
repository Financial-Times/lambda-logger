{
    "name": "@financial-times/lambda-logger",
    "version": "1.0.2",
    "description": "Logger used by the lambda team. Logs in JSON format using pino",
    "main": "dist/@financial-times/lambda-logger.js",
    "browser": "dist/@financial-times/lambda-logger.umd.js",
    "module": "dist/@financial-times/lambda-logger.m.js",
    "scripts": {
        "build": "microbundle -i index.js -o dist",
        "watch": "npm run build -- watch",
        "test": "jest",
        "coverage": "npm test -- --coverage",
        "coverage:submit": "cat ./coverage/lcov.info | coveralls",
        "lint": "eslint --cache --fix .",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "*.js": [
            "eslint --cache --fix",
            "git add"
        ]
    },
    "engines": {
        "node": ">= 6.10.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Financial-Times/lambda-logger.git"
    },
    "author": "Charlie Briggs <charlie.briggs@ft.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Financial-Times/lambda-logger/issues"
    },
    "homepage": "https://github.com/Financial-Times/lambda-logger#readme",
    "dependencies": {
        "pino": "~4.10.4"
    },
    "devDependencies": {
        "@financial-times/eslint-config-de-tooling": "^2.0.3",
        "babel-core": "^6.26.0",
        "babel-jest": "^22.0.4",
        "babel-preset-env": "^1.6.1",
        "coveralls": "^3.0.0",
        "eslint": "^4.14.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jest": "^21.5.0",
        "eslint-plugin-prettier": "^2.4.0",
        "husky": "^0.14.3",
        "jest": "^22.0.4",
        "lint-staged": "^6.0.0",
        "microbundle": "^0.2.4",
        "prettier": "^1.9.2"
    }
}
